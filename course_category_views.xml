<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_academy_course_category" model="ir.actions.act_window">
        <field name="name">Course Categories</field>
        <field name="res_model">academy.course.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_form_academy_course_category" model="ir.ui.view">
        <field name="name">academy.course.category.form</field>
        <field name="model">academy.course.category</field>
        <field name="arch" type="xml">
            <form string="Course Category">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="course_count" readonly="1"/>
                    </group>
                    <notebook>
                        <page name="courses" string="Courses">
                            <field name="course_ids" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_academy_course_category" model="ir.ui.view">
        <field name="name">academy.course.category.tree</field>
        <field name="model">academy.course.category</field>
        <field name="arch" type="xml">
            <tree string="Course Categories">
                <field name="name"/>
                <field name="course_count"/>
            </tree>
        </field>
    </record>
</odoo>
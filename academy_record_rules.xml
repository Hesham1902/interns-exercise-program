<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="enrollment_rule_student_own" model="ir.rule">
            <field name="name">Academy Enrollment: Student Own Records</field>
            <field name="model_id" ref="model_academy_enrollment"/>
            <field name="domain_force">
                [('student_id.user_id', '=', user.id)]
            </field>
            <field name="groups" eval="[(4, ref('academy_lab2.academy_group_student'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="enrollment_rule_instructor_courses" model="ir.rule">
            <field name="name">Academy Enrollment: Instructor Course Records</field>
            <field name="model_id" ref="model_academy_enrollment"/>
            <field name="domain_force">
                [('course_id.instructor_id.user_id', '=', user.id)]
            </field>
            <field name="groups" eval="[(4, ref('academy_lab2.academy_group_instructor'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record model="res.groups" id="academy_group_student">
            <field name="name">Academy / Student</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Student role for the Academy module.</field>
        </record>

        <record model="res.groups" id="academy_group_instructor">
            <field name="name">Academy / Instructor</field>
            <field name="implied_ids" eval="[(4, ref('academy_group_student'))]"/>
            <field name="comment">Instructor role, inherits Student access.</field>
        </record>

        <record model="res.groups" id="academy_group_manager">
            <field name="name">Academy / Manager</field>
            <field name="implied_ids" eval="[(4, ref('academy_group_instructor'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="comment">Manager role, inherits Instructor access and has full control.</field>
        </record>
    </data>
</odoo>